<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="304.0dp"
        android:id="@+id/frameLayout1">
        <TextView
            android:text="Ubicacion:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="20.0dp"
            android:id="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="9.3dp" />
        <EditText
            android:layout_width="150.7dp"
            android:layout_height="35.0dp"
            android:id="@+id/editText1"
            android:layout_marginRight="0.0dp"
            android:layout_below="@id/textView1"
            android:layout_alignParentLeft="true"
            android:singleLine="true" />
        <TextView
            android:text="Codigo:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText1"
            android:id="@+id/textView2"
            android:layout_marginTop="22.7dp" />
        <EditText
            android:layout_width="152.0dp"
            android:layout_height="35.0dp"
            android:layout_below="@id/textView2"
            android:id="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:singleLine="true" />
        <Button
            android:text="Buscar"
            android:layout_width="wrap_content"
            android:layout_height="38.0dp"
            android:id="@+id/button1"
            android:layout_alignTop="@id/editText2"
            android:layout_toRightOf="@id/editText2" />
        <CheckBox
            android:text="Disponible para entregar"
            android:layout_width="236.7dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText2"
            android:id="@+id/checkBox1"
            android:layout_alignParentLeft="true"
            android:checked="true"
            android:textColor="@color/azulEps" />
    </RelativeLayout>
</LinearLayout>