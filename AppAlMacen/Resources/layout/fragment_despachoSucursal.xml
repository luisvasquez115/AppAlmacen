
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/LinearDespachoSucursal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true">

    <TextView
        android:text="Código"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblCodigo" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCodigo"
        android:singleLine="true"
        android:inputType="none" />

    <TextView
        android:text="Bolsa"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCodigo"
        android:id="@+id/lblBolsa" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCodigo"
        android:id="@+id/txtBolsa"
        android:singleLine="true"
        android:inputType="none"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Sucursal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCodigo"
        android:id="@+id/lblSucursal"
        android:layout_above="@id/txtSucursal" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAgencia"
        android:id="@+id/txtSucursal"
        android:singleLine="true"
        android:inputType="none"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Agencia"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSucursal"
        android:id="@+id/lblAgencia" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblAgencia"
        android:id="@+id/txtAgencia"
        android:singleLine="true"
        android:inputType="none" />
    </LinearLayout>

    <Button
        android:text="Enviar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btnBuscar"
        android:layout_marginBottom="-6dp"
        android:layout_marginLeft="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>