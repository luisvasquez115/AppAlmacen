
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/FondoEps">

    <ImageView
        android:src="@drawable/logoblanco"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="20.0dp"
        android:layout_marginLeft="20.0dp"
        android:layout_above="@id/RelativeImage"
        android:layout_marginBottom="57.5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:id="@+id/RelativeImage">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/editextborder"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/user"
                android:layout_marginLeft="9.0dp"
                android:layout_marginTop="10.0dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/password"
                android:layout_marginLeft="9.0dp"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="62.0dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="40.0dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUsuario"
                    android:hint="Usuario"
                    android:textAlignment="inherit"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="0.0dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="2dp"
                    android:backgroundTint="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@android:color/darker_gray"
                    android:singleLine="true" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#808080"
                    android:layout_centerVertical="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtContrasena"
                    android:hint="contrasena"
                    android:textAlignment="textStart"
                    android:inputType="textPassword"
                    android:layout_marginLeft="0.0dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="2dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@android:color/darker_gray"
                    android:singleLine="false" />

            </RelativeLayout>
        </FrameLayout>

        <Button
            android:text="Entrar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btnEntrar"
            android:textColor="@color/azulEps"
            android:clickable="true"
            android:elevation="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20.0dp"
            android:backgroundTint="@android:color/darker_gray" />

    </LinearLayout>
    
</RelativeLayout>