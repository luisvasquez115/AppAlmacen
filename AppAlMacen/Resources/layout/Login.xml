<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulEps">
    <ImageView
        android:src="@drawable/logoblanco"
        android:layout_width="match_parent"
        android:layout_height="100.7dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />
    <RelativeLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="245.3dp"
        android:layout_height="150.0dp"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="240.0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1">
        <EditText
            android:layout_width="230.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText1"
            android:hint="Usuario"
            android:textColorHint="@android:color/background_dark"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:layout_marginLeft="0.0dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="2dp" />
        <EditText
            android:layout_width="230.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:hint="contrasena"
            android:textColorHint="@android:color/background_dark"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:layout_marginLeft="0.0dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/button1"
            android:paddingLeft="2dp" />
        <Button
            android:text="Entrar"
            android:layout_width="230.0dp"
            android:layout_height="40.0dp"
            android:id="@+id/button1"
            android:layout_marginTop="25.0dp"
            android:textColor="@color/azulEps"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:background="@drawable/buttonstyle"
            android:elevation="6dp" />
    </RelativeLayout>
</RelativeLayout>